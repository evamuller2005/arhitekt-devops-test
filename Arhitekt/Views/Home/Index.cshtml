@model IEnumerable<Arhitekt.Models.Project>

@{
    ViewData["Title"] = "Home Page";
}

<div class="hero bg-dark text-center py-5">
    <h1 style="color: #ECECEC; font-size: 3em; font-family: 'Cursive';">
        Welcome to Architect
    </h1>
    <p class="lead" style="color: #B0B0B0;">
        Discover iconic architecture projects from around the world.
    </p>
</div>

<style>
    body {
        background-color: #1C1C1C;
        color: #ECECEC;
    }
    .card {
        background-color: #2D2D2D;
        height: 500px;
        border: none;
        box-shadow: 0 4px 6px rgba(0,0,0,0.2);
        border-radius: 8px;
    }
    .card-img-top {
        height: 300px;
        object-fit: cover;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }
    .btn-outline-primary {
        border-color: #6A936C;
        color: #6A936C;
    }
    .btn-outline-primary:hover {
        background-color: #6A936C;
        color: #ECECEC;
    }
</style>

<br />

<div class="container">
    <div class="row">

        @foreach (var project in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">

                    <img src="@(project.Images?.FirstOrDefault() ?? "/images/default.jpg")"
                         class="card-img-top"
                         alt="@project.Name" />

                    <div class="card-body">
                        <h5 class="card-title">@project.Name</h5>
                        <p class="card-text">@project.Description</p>

                        <a asp-controller="Project"
                           asp-action="Details"
                           asp-route-id="@project.ProjectID"
                           class="btn btn-outline-primary">
                            View Project
                        </a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
