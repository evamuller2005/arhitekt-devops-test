        height: 500px;
        border: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        border-radius: 8px;
    }

    /* za slikce */
    .card-img-top {
        height: 300px;
        object-fit: cover; 
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    /* gumb  */
    .btn-outline-primary {
        border-color: #6A936C; 
        color: #6A936C;
    }

    .btn-outline-primary:hover {
        background-color: #6A936C;
        color: #ECECEC;
    }
}
</style>

