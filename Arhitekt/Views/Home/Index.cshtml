<style>
    body {
        background-color: #1C1C1C; /* tmno ozadje */
        color: #ECECEC; /* barva teksta */
    }

    /* Hero section styling */
    .hero {
        background-color: #2D2D2D; /* Default hero background color */
        border-radius: 8px; /* Optional: rounded corners */
        margin: 20px; /* Space around the hero section */
        padding: 40px; /* Space inside the hero section */
        transition: background-color 0.3s ease; /* Smooth transition for changes */
